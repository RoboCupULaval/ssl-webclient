doctype 5
html(lang="en")
  meta(charset="utf-8")
  title The game is on!
  link(rel="stylesheet", href="lib/css/bootstrap.min.css")
  link(rel="stylesheet", href="lib/css/bootstrap-theme.min.css")
  link(rel="stylesheet", href="lib/css/font-awesome.min.css")
  link(rel="stylesheet", href="lib/css/jscli.css")
  link(rel="stylesheet", href="style.css")

  #field

  #info.container

    //ul.breadcrumb
      li
        span#team_blue
          span.team_name --
          &nbsp;
          span.score.badge -
        span &nbsp;&times;&nbsp;
        span#team_yellow
          span.score.badge -
          &nbsp;
          span.team_name --
      li
        i.fa.fa-time
        &nbsp;
        span#time_left --

    input.hide#file-input(type="file")
    .info.row.pull-left
      .tip
    .controls.row.pull-right
      .col-md-7
        input.control.player-slider.form-control(type="range", style="display: none")
        .file-progress.progress.progress-striped.active(style="display: none")
          span.progress-desc(style="position: absolute")
          .parse-progress.progress-bar.progress-bar-info(role="progressbar", aria-valuenow="45", aria-valuemin="0", aria-valuemax="100")
          .load-progress.progress-bar.progress-bar-success(role="progressbar", aria-valuenow="45", aria-valuemin="0", aria-valuemax="100")
      .col-md-5
        a.control.btn.btn-default.play-btn(data-toggle="tooltip", title="Play/pause log file", data-placement="bottom", style="display: none")
          i.fa.fa-play
        a.control.btn.btn-default.file-btn(data-toggle="tooltip", title="Open a local log file", data-placement="bottom")
          i.fa.fa-file
        a.control.btn.btn-default.fullscreen-btn(data-toggle="tooltip", title="Fullscreen", data-placement="bottom")
          i.fa.fa-arrows-alt

  if config.console
    .jscli-container
      #wrap.jscli-wrap
        output#output.jscli
        input#input.jscli

  script(src="client.js")
  script(src="lib/js/bootstrap.min.js")
  script(src="lib/js/jscli.js")
  if config.livereload
    script(src="http://localhost:35729/livereload.js")
